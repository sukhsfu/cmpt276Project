<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/resName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="resName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="resAddress"
        app:layout_constraintEnd_toEndOf="@+id/resName"
        app:layout_constraintStart_toStartOf="@+id/resName"
        app:layout_constraintTop_toTopOf="@id/resName" />

    <TextView
        android:id="@+id/resHazardLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="resHazardLevel"
        app:layout_constraintEnd_toEndOf="@+id/resName"
        app:layout_constraintStart_toStartOf="@+id/resName"
        app:layout_constraintTop_toTopOf="@id/resAddress" />

</androidx.constraintlayout.widget.ConstraintLayout>